<Window x:Class="SriExtractor.Desktop.FacturasPagoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Facturas en BD"
        Height="520"
        Width="1022"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PageBackground}">

    <Window.Resources>
        <SolidColorBrush x:Key="PageBackground" Color="#FFF4F5F7"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderBrushLight" Color="#FFCED4DA"/>
    </Window.Resources>

    <Grid Margin="16" Background="{StaticResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button Content="Refrescar" Width="120" Height="32" Click="BtnRefrescar_Click"/>
        </StackPanel>

        <DataGrid x:Name="GridFacturas"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CO_NUMERO" Binding="{Binding CoNumero}" Width="110"/>
                <DataGridTextColumn Header="PM_NROSEC" Binding="{Binding PmNrosec}" Width="110"/>
                <DataGridTextColumn Header="CO_FACPRO" Binding="{Binding CoFacpro}" Width="140"/>
                <DataGridTextColumn Header="PV_RUCCI" Binding="{Binding PvRucci}" Width="140"/>
                <DataGridTextColumn Header="PV_RAZONS" Binding="{Binding PvRazons}" Width="*"/>
                <DataGridTextColumn Header="RF_CODIGO" Binding="{Binding RfCodigo}" Width="100"/>
                <DataGridTextColumn Header="RF_CODIGO2" Binding="{Binding RfCodigo2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Margin="0,8,0,0" Padding="8" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
            <TextBlock x:Name="LblStatus" Text="Listo." TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
