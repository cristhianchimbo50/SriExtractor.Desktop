<Window x:Class="SriExtractor.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SRI Extractor"
        Height="720"
        Width="1320"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PageBackground}">

    <Window.Resources>
        <SolidColorBrush x:Key="PageBackground" Color="#FFF4F5F7"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderBrushLight" Color="#FFCED4DA"/>
    </Window.Resources>

    <Grid Margin="16" Background="{StaticResource PageBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="118.04"/>
            <RowDefinition Height="8.83"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="379*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Padding="12" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnOpenSri"
                        Content="Abrir SRI e iniciar sesión"
                        Width="220" Height="38"
                        Command="{Binding OpenSriCommand}"/>

                <Button Content="Proveedores"
                        Width="130" Height="38"
                        Click="BtnOpenProveedores_Click"/>

                <Button Content="Facturas BD"
                        Width="130" Height="38"
                        Click="BtnOpenFacturasBd_Click"/>
            </StackPanel>
        </Border>

        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="Periodo de emisión" Margin="0,12,0,3" Padding="8">
            <Grid Margin="4" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Año" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CmbYear"
                              Foreground="Black"
                              Background="White"
                              IsEditable="True"
                              IsReadOnly="True"
                              Height="32"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding YearOptions}"
                              SelectedItem="{Binding SelectedYear}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Mes" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CmbMonth"
                              Foreground="Black"
                              Background="White"
                              IsEditable="True"
                              IsReadOnly="True"
                              Height="32"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding MonthOptions}"
                              SelectedItem="{Binding SelectedMonth}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Día" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CmbDay"
                              Foreground="Black"
                              Background="White"
                              IsEditable="True"
                              IsReadOnly="True"
                              Height="32"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding DayOptions}"
                              SelectedItem="{Binding SelectedDay}"/>
                </StackPanel>
                <Button Grid.Column="3"
                        Content="Descargar y cargar"
                        Width="210" Height="36"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="12,18,0,0"
                        Command="{Binding DownloadAllCommand}"/>
            </Grid>
        </GroupBox>

        <Border Grid.Row="3" Grid.Column="0" Padding="10" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1" Margin="0,0,0,51" Grid.RowSpan="4">
            <DataGrid
                  x:Name="GridRecibidos"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  ItemsSource="{Binding Rows}">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ProveedorExiste}" Value="True">
                                <Setter Property="Background" Value="#FFDFF6D8"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding FechaEmision}" Width="110"/>
                    <DataGridTextColumn Header="RUC" Binding="{Binding RucEmisor}" Width="120"/>
                    <DataGridTextColumn Header="Proveedor" Binding="{Binding RazonSocialEmisor}" Width="*"/>
                    <DataGridTextColumn Header="N° Factura" Binding="{Binding NumeroFactura}" Width="160"/>

                    <DataGridTextColumn Header="N° de compra" Binding="{Binding CoNumeroDisplay}" Width="120"/>
                    <DataGridTextColumn Header="N° de retención" Binding="{Binding PmNrosecDisplay}" Width="130"/>

                    <DataGridTemplateColumn Header="Ver" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ver" Width="55" Height="26" Click="BtnView_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="3" Grid.Column="1" Padding="10" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1" Margin="12,0,0,51" Grid.RowSpan="4">
            <StackPanel>
                <TextBlock Text="Fechas extraídas" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TreeView x:Name="TreeFechas" MouseDoubleClick="TreeFechas_MouseDoubleClick" />
            </StackPanel>
        </Border>

        <Border Grid.Row="6" Grid.ColumnSpan="2" Margin="0,12,0,0" Padding="10">
            <TextBlock x:Name="LblStatus" Text="{Binding Status}" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
