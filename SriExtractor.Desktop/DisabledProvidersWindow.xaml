<Window x:Class="SriExtractor.Desktop.DisabledProvidersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proveedores desactivados"
        Height="520"
        Width="860"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Refrescar" Width="120" Height="34" Click="BtnRefresh_Click"/>
            <Button Content="Activar" Width="120" Height="34" Margin="12,0,0,0" Click="BtnEnable_Click"/>
            <Button Content="Desactivar" Width="120" Height="34" Margin="12,0,0,0" Click="BtnDisable_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  x:Name="GridDisabled"
                  Margin="0,12,0,12"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RUC" Binding="{Binding Ruc}" Width="160"/>
                <DataGridTextColumn Header="Razón social" Binding="{Binding RazonSocial}" Width="*"/>
                <DataGridTextColumn Header="Deshabilitado" Binding="{Binding Disabled}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" x:Name="LblInfo" TextWrapping="Wrap"/>
    </Grid>
</Window>